<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="44dp">

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/stockDetailCellTitle"
        android:textSize="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        android:id="@+id/stockDetailCellContent"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_alignTop="@+id/stockDetailCellTitle"
        android:layout_toRightOf="@+id/stockDetailCellTitle"
        android:layout_toEndOf="@+id/stockDetailCellTitle"
        android:layout_marginLeft="10dp"
        android:textColor="#000" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/stockDetailCellImageView"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/stockDetailCellContent"
        android:layout_toEndOf="@+id/stockDetailCellContent"
        android:layout_marginLeft="5dp" />
</RelativeLayout>